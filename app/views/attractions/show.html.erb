<p><%= @attraction.name %></p>

<% if !@user.admin %>
  <%= form_tag ({controller: 'users', action: 'riding', method: 'post'}) do %>
    <input id="attraction" name="attraction" value="<%= @attraction.id %>" type="hidden">
    <input type=submit value='Go on this ride'>
  <% end %>
<% end %>

<div>
  <% if @user.admin %>
    <%= link_to "Edit Attraction", edit_attraction_path(@attraction) %>
  <% end %>
</div>
